---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - posts
layout: "home.njk"
permalink: "/tag/{{ tag | slugify }}/"
eleventyExcludeFromCollections: "true"
description: "All posts with the tag: {{ tag }}."
---

<h3>Tag archive: {{ tag }}</h3>

<br>

<ul class="post-list">

{% set taglist = collections[ tag ] %}

{% for post in taglist | reverse %}

  <h2><li><a href="{{ post.url }}">{{ post.data.title }}</a></li></h2>

<img src="/posts/images/{{ post.data.coverImage }}" alt="{{ post.data.title }}">

  {% include 'byline.njk' %}

  <br>

  {{ post.data.description }}

  <p></p>

{% endfor %}

</ul>
