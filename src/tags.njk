---
pagination:
  data: collections
  size: 1
  alias: tag
layout: 'home.njk'
permalink: /tags/{{ tag | slugify }}/
---

<h1>Posts with the tag “{{ tag }}”</h1>

<ol>
{% set taglist = collections[ tag ] %}
{% for post in taglist | reverse %}
  <li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
{% endfor %}
</ol>
