---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - posts
layout: "base.njk"
permalink: "/tag/{{ tag | slugify }}/"
eleventyExcludeFromCollections: "true"
title: "Tag archive."
description: "Tag archive."
---

<h3>Tag archive: {{ tag }}</h3>
<br>
<div class="post-list">
<ul>

{% set taglist = collections[ tag ] %}

{% for post in taglist | reverse %}

  <h1><li><a href="{{ post.url }}">{{ post.data.title }}</a></li></h1>

<a href="{{ post.url }}"><img src="/posts/images/{{ post.data.coverImage }}" alt="{{ post.data.title }}"></a>

  {% include 'byline.njk' %}

  <br>

  {{ post.data.description }}

  <p></p>

{% endfor %}

</ul>
</div>